@{
    ViewData["Title"] = "Create NFA";
    Layout = "_Layout";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" id="popup">
        @TempData["SuccessMessage"]
    </div>
    <script>
        setTimeout(function() {
            document.getElementById('popup').style.display = 'none';
        }, 3000);
    </script>
}
@model AMS.Models.Contact_us

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden; /* Prevents scrolling */
        position: relative;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image covers the entire background */
        z-index: -1; /* Places the image behind other content */
    }

    .content {
        position: relative;
        color: white;
        text-align: center;
        padding: 20px;
    }
</style>
<img src="~/css/12.jpg" alt="Background Image" class="background-image">
<h1>Contact us</h1>
<hr />
<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="User_ID" class="form-control" value="@ViewBag.Data.User_ID" type="hidden"/>
            <div class="form-group" style=" display: flex">
                <label asp-for="First_Name" class="control-label" style="margin-top: 5px;">First Name</label>
                <input asp-for="First_Name" class="form-control" style="width: 20%;  margin-left:10px;margin-right: 50px;" placeholder="First name" required />
                <label asp-for="Last_Name" class="control-label" style="margin-top: 5px;">Last Name</label>
                <input asp-for="Last_Name" class="form-control" style="width: 20%;margin-left:10px;margin-right: 50px;" placeholder="Last name" required />
            </div>
            <br>
            <div class="form-group" style=" display: flex">
                <label asp-for="Phone" class="control-label" style="margin-top: 5px;">Contact</label>
                <input asp-for="Phone" class="form-control" style="width: 20%;margin-left:31.5px;margin-right: 50px;" placeholder="Mobile no" required />
                <label asp-for="Email_ID" class="control-label" style="margin-top: 5px;">Email</label>
                <input asp-for="Email_ID" class="form-control" style="width: 20%;margin-left:46.5px;margin-right: 50px;" placeholder="Email id" required />
            </div>
            <br>
            <div class="form-group" style=" display: flex">
                <label asp-for="Subject" class="control-label" style="margin-top: 5px;"></label>
                <input asp-for="Subject" class="form-control" style="width: 20%;margin-left:34px;margin-right: 50px;" placeholder="Subject" required />
            </div>
            <br>
            <div class="form-group" style=" display: flex">
                <label asp-for="Message" class="control-label" style="margin-top: 5px;"></label>
                <textarea asp-for="Message" class="form-control" style="width: 50.35%; height: 100px;margin-left:25px;resize: none" placeholder="Max 500 words" maxlength="500" required ></textarea>
            </div>
            <br>
            <div class="form-group" style="display: flex">
                <input type="reset" value="Reset" class="btn btn-primary" style="margin-right: 514px;margin-left: 86px;" />
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
