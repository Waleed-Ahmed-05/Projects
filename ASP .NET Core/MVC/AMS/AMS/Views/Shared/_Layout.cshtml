                                <a asp-area="" asp-controller="Users" asp-action="Edit" asp-route-id="@User_ID" class="nav-link text-dark">Welcome @ViewBag.Data.First_Name @ViewBag.Data.Last_Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-danger" asp-area="" asp-controller="Users" asp-action="Layout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
}
