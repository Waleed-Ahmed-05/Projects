@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
        background-color: black;
    }

    .image-slider {
        width: 100%;
        height: calc(100vh - 150px); /* Full viewport height */
        overflow: hidden;
        position: relative;
    }

        .image-slider figure {
            margin: 0;
            width: 120%; /* Width for three images */
            display: flex;
            animation: slide 60s infinite alternate; /* Bidirectional animation with alternate direction */
            position: relative; /* Needed for absolute positioning of text */
        }

            .image-slider figure img {
                width: 100%;
                height: 100vh; /* Full viewport height for each image */
                object-fit: cover; /* Ensures images cover the full slider area */
            }

    /* Keyframes for bidirectional sliding effect */
    @@keyframes slide {
        0% {
            transform: translateX(0); /* Start at the first image */
        }

        50% {
            transform: translateX(-200%); /* Slide to the third image (end) */
        }

        100% {
            transform: translateX(0); /* Slide back to the first image */
        }
    }
</style>

<div class="image-slider">
    <figure>
        <img src="~/css/1.jpg" alt="Image 1">
        <img src="~/css/2.jpg" alt="Image 2">
        <img src="~/css/3.jpg" alt="Image 3">
        <img src="~/css/1.jpg" alt="Image 4">
    </figure>
</div>
