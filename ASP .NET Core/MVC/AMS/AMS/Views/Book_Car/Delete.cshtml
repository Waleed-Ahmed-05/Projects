@model AMS.Models.Book_Car

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden; /* Prevents scrolling */
        position: relative;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image covers the entire background */
        z-index: -1; /* Places the image behind other content */
    }

    .content {
        position: relative;
        color: white;
        text-align: center;
        padding: 20px;
    }

    .shadow-text {
        color: black;
        text-shadow: 1px 1px 2px white, /* Bottom-right shadow */
        -1px -1px 2px white, /* Top-left shadow */
        -1px 1px 2px white, /* Bottom-left shadow */
        1px -1px 2px white; /* Top-right shadow */
    }
</style>
<img src="~/css/9.jpg" alt="Background Image" class="background-image">
<h1 class="shadow-text"><a href="javascript:void(0);" onclick="window.history.back();"><i class="fa-solid fa-arrow-left" style="color: #020203;"></i></a> Cancel this Ride</h1>

<h3 class="shadow-text">Are you sure you want to cancel this ride?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10 shadow-text">
            @Html.DisplayFor(model => model.First_Name)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10  shadow-text">
            @Html.DisplayFor(model => model.Last_Name)
        </dd>
        <dt class="col-sm-2">
            Pickup Location
        </dt>
        <dd class="col-sm-10  shadow-text">
            @Html.DisplayFor(model => model.Pickup_Location)
        </dd>
        <dt class="col-sm-2">
            Dropoff Location
        </dt>
        <dd class="col-sm-10  shadow-text">
            @Html.DisplayFor(model => model.Dropoff)
        </dd>
        <dt class="col-sm-2">
            Pickup Time
        </dt>
        <dd class="col-sm-10  shadow-text">
            @Html.DisplayFor(model => model.Pickup_Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IBAN)
        </dt>
        <dd class="col-sm-10  shadow-text">
            @Html.DisplayFor(model => model.IBAN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CVV)
        </dt>
        <dd class="col-sm-10 shadow-text">
            @Html.DisplayFor(model => model.CVV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10 shadow-text">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Booking_Car_ID" />
        <input type="submit" value="Cancel Ride" class="btn btn-danger" />
    </form>
</div>
